@model ExpenseTracker.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - budgET</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
        }

        .form-section {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 2em;
            background-color: #f5f5f5;
        }

        .logo-section {
            flex: 1;
            background-color: #00A86B;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .logo {
            color: white;
            font-size: 3em;
            font-weight: bold;
        }

        .subtitle {
            color: white;
            font-size: 1em;
            margin-top: 0.5em;
        }

        h2 {
            color: #333;
            margin-bottom: 1em;
        }

        .form-group {
            margin-bottom: 1em;
        }

        label {
            display: block;
            margin-bottom: 0.5em;
            color: #333;
        }

        input[type="text"], input[type="email"], input[type="password"] {
            width: 100%;
            padding: 0.5em;
            border: 1px solid #4C7766;
            border-radius: 4px;
        }

        .name-fields {
            display: flex;
            gap: 1em;
        }

            .name-fields .form-group {
                flex: 1;
            }

        button {
            width: 100%;
            padding: 0.5em;
            background-color: #4C7766;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 1em;
        }

        .login-link {
            margin-top: 2em;
            text-align: center;
        }

            .login-link a {
                color: #4C7766;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="form-section">
        <h2>Register</h2>
        <form asp-action="Register" method="post">
            <!-- User ID Field -->
            <div class="form-group">
                <label asp-for="UserId">User ID</label>
                <input asp-for="UserId" type="text" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <!-- Name Fields -->
            <div class="name-fields">
                <div class="form-group">
                    <label asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" type="text" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" type="text" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <!-- Email Field -->
            <div class="form-group">
                <label asp-for="Email">Email Address</label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password Fields -->
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

           
            <!-- Submit Button -->
            <button type="submit">Register</button>
        </form>

        <!-- Link to Login Page -->
        <div class="login-link">
            Already have an account? <a asp-page="/Login">Log in</a>
        </div>
    </div>

    <div class="logo-section">
        <div>
            <div class="logo">.budgET</div>
            <div class="subtitle">expense tracker</div>
        </div>
    </div>
</body>
</html>
